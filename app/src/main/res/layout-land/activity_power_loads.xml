<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_main_title"
        style="@style/ActivityTitle"
        android:text="@string/power_load"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_main_subtitle"
        android:text="@string/ups_and_pdu_sizing"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <include
            layout="@layout/v_power_loads"
            android:id="@+id/lo_top_left"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="@string/cabinet_voltage_vac"
                    android:id="@+id/tv_voltage"/>
                <Spinner
                    style="@style/TwoColumnResults"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:contentDescription="@string/spinner_source_voltage"
                    android:id="@+id/sp_source_voltage"/>
            </LinearLayout>
            <include
                layout="@layout/v_power_results"
                android:id="@+id/lo_bottom_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.google.android.gms.ads.AdView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adViewBanner"
                ads:adSize="BANNER"
                ads:adUnitId="ca-app-pub-8686454969066832/2017040207">
            </com.google.android.gms.ads.AdView>
        </LinearLayout>
     </LinearLayout>
</LinearLayout>